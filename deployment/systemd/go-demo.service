[Unit]
Description=Go Demo Static File Server
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/go-demo
ExecStart=/opt/go-demo/go-demo -embedded
Restart=on-failure
RestartSec=5s

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/go-demo

[Install]
WantedBy=multi-user.target
